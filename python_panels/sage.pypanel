<?xml version="1.0" encoding="UTF-8"?>
<pythonPanelDocument>
  <interface name="sage" label="Sage - AI Assistant"
             icon="$RADIANT_SUITE/config/icons/sage.svg"
             showNetworkNavigationBar="false" help_url="">
    <script><![CDATA[
import sys
import os
import importlib
from PySide6 import QtWidgets, QtCore
import hou

# One-time initialization
if not hasattr(hou.session, "_radiant_sage_initialized"):
    hou.session._radiant_sage_initialized = False

if not hou.session._radiant_sage_initialized:
    radiant_dir = os.environ.get("RADIANT_SUITE")
    if not radiant_dir:
        QtWidgets.QMessageBox.critical(
            None,
            "Environment Error",
            "RADIANT_SUITE environment variable not set.\n"
            "Please check your RadiantSuite package installation."
        )
    else:
        python_dir = os.path.join(radiant_dir, "python")
        if os.path.isdir(python_dir) and python_dir not in sys.path:
            sys.path.insert(0, python_dir)

        sage_dir = os.path.join(python_dir, "sage")
        if os.path.isdir(sage_dir) and sage_dir not in sys.path:
            sys.path.insert(0, sage_dir)

    hou.session._radiant_sage_initialized = True

# Force reload for development
if "sage_tool" in sys.modules:
    del sys.modules["sage_tool"]
if "sage" in sys.modules:
    del sys.modules["sage"]

try:
    from sage import sage_tool
    sage_tool = importlib.reload(sage_tool)
except Exception as e:
    QtWidgets.QMessageBox.critical(
        None,
        "Import Error",
        f"Could not import sage_tool:\n{e}"
    )
    raise

def onCreateInterface():
    ui = sage_tool.create_panel()
    ui.setWindowFlags(QtCore.Qt.Widget)
    return ui
]]></script>
    <includeInToolbarMenu menu_position="503" create_separator="false"/>
    <help><![CDATA[Sage - AI assistant with deep Houdini context awareness. Supports OpenAI, Anthropic, Google Gemini, and Ollama.]]></help>
  </interface>
</pythonPanelDocument>
